<%- model_class = Univercity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @univercities.each do |univercity| %>
      <tr>
        <td><%= link_to univercity.name, univercity_path(univercity) %></td>
        <td><%= univercity.city %></td>
        <td><%= univercity.state %></td>
        <td><%= univercity.country %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_univercity_path(univercity), :class => 'btn btn-warning btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      univercity_path(univercity),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_univercity_path,
            :class => 'btn btn-primary' %>
